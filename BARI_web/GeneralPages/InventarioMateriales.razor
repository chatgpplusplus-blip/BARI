    {
        var value = args.Value?.ToString();
        if (string.IsNullOrWhiteSpace(value))
        {
            Nav.NavigateTo("/inventario-materiales");
            return;
        }

        Nav.NavigateTo($"/inventario-materiales/{value}");
    }

