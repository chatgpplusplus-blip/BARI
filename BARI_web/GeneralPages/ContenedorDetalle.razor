@page "/inventario-sustancias/contenedor/{ContenedorId}"
@using Npgsql
@using BARI_web.General_Services
@inject NpgsqlDataSource DataSource
@inject LaboratorioState LaboratorioState

<PageTitle>@(detalle is null ? "Contenedor" : detalle.Id)</PageTitle>

@if (!string.IsNullOrWhiteSpace(loadError))
{
    <p class="error-note">No se pudo cargar el contenedor: @loadError</p>
}
else if (detalle is null)
{
    <p><em>Cargando…</em></p>
}
else
{
    <a class="back" href="/inventario-sustancias">← Volver a sustancias</a>

    <section class="detail-card">
        <header>
            <h1>Contenedor @detalle.Id</h1>
            <p class="code">Reactivo: @detalle.Reactivo</p>
        </header>

        <div class="detail-body">
            <div class="detail-main">
                <dl class="info">
                    <div>
                        <dt>Reactivo</dt>
                        <dd>@detalle.Reactivo</dd>
                    </div>
                    <div>
                        <dt>Marca</dt>
                        <dd>@detalle.Marca</dd>
                    </div>
                    <div>
                        <dt>Densidad</dt>
                        <dd>@detalle.Densidad</dd>
                    </div>
                    <div>
                        <dt>Proveedor</dt>
                        <dd>@detalle.Proveedor</dd>
                    </div>
                    <div>
                        <dt>Cantidad nominal</dt>
                        <dd>@detalle.CantidadNominal</dd>
                    </div>
                    <div>
                        <dt>Cantidad actual</dt>
                        <dd>@detalle.CantidadActual</dd>
                    </div>
                    <div>
                        <dt>Condición</dt>
                        <dd>@detalle.Condicion</dd>
                    </div>
                    <div>
                        <dt>Ubicación</dt>
                        <dd>@detalle.Ubicacion</dd>
                    </div>
                    <div>
                        <dt>Fecha de compra</dt>
                        <dd>@detalle.FechaCompra</dd>
                    </div>
                    <div>
                        <dt>Fecha de recepción</dt>
                        <dd>@detalle.FechaRecepcion</dd>
                    </div>
                    <div>
                        <dt>Fecha de apertura</dt>
                        <dd>@detalle.FechaApertura</dd>
                    </div>
                    <div>
                        <dt>Fecha de vencimiento</dt>
                        <dd>@detalle.FechaVencimiento</dd>
                    </div>
                    <div>
                        <dt>Envase</dt>
                        <dd>@detalle.Envase</dd>
                    </div>
                    <div>
                        <dt>QR</dt>
                        <dd>@detalle.Qr</dd>
                    </div>
                </dl>
            </div>
            @if (!string.IsNullOrWhiteSpace(detalle.ImagenUrl))
            {
                <div class="detail-image">
                    <img src="@ResolveImagenUrl(detalle.ImagenUrl)" alt="Imagen del contenedor @detalle.Id" />
                </div>
            }
        </div>

        <div class="edit-wrap">
            <button type="button" class="btn-secondary" @onclick="ToggleEdit">
                @(showEdit ? "Cerrar edición" : "Editar")
            </button>
        </div>

        @if (showEdit)
        {
            <div class="edit-panel">
                <h3>Actualizar contenedor</h3>
                <div class="edit-grid">
                    <label>
                        Proveedor
                        <input @bind="edit.Proveedor" />
                    </label>
                    <label>
                        Cantidad nominal
                        <input type="number" min="0" step="0.01" @bind="edit.CantidadNominal" />
                    </label>
                    <label>
                        Cantidad actual
                        <input type="number" min="0" step="0.01" @bind="edit.CantidadActual" />
                    </label>
                    <label>
                        Condición
                        <select @bind="edit.CondicionId">
                            <option value="">Sin condición</option>
                            @foreach (var cond in condiciones)
                            {
                                <option value="@cond.Id">@cond.Nombre</option>
                            }
                        </select>
                    </label>
                    <label>
                        Fecha de apertura
                        <input type="date" @bind-value="edit.FechaApertura" @bind-value:format="yyyy-MM-dd" />
                    </label>
                    <label>
                        Fecha de vencimiento
                        <input type="date" @bind-value="edit.FechaVencimiento" @bind-value:format="yyyy-MM-dd" />
                    </label>
                    <label>
                        QR
                        <input @bind="edit.Qr" />
                    </label>
                    <label class="edit-wide">
                        Observaciones
                        <textarea rows="3" @bind="edit.Observaciones"></textarea>
                    </label>
                </div>
                <div class="edit-actions">
                    <button type="button" class="btn" @onclick="SaveEditAsync">Guardar cambios</button>
                    @if (!string.IsNullOrWhiteSpace(editMessage))
                    {
                        <span class="edit-msg">@editMessage</span>
                    }
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(detalle.Observaciones))
        {
            <div class="notes">
                <strong>Observaciones</strong>
                <p>@detalle.Observaciones</p>
            </div>
        }
    </section>
}

@code {
    [Parameter] public string? ContenedorId { get; set; }

    private ContenedorInfo? detalle;
    private string? loadError;
    private readonly List<CondicionOption> condiciones = new();
    private bool showEdit;
    private string? editMessage;
    private ContenedorEdit edit = new();

    protected override async Task OnParametersSetAsync()
    {
        if (string.IsNullOrWhiteSpace(ContenedorId))
        {
            loadError = "No se especificó el ID del contenedor.";
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            const string sql = @"
                SELECT c.cont_id,
                       COALESCE(NULLIF(s.nombre_comercial, ''),
                                NULLIF(s.nombre_quimico, ''),
                                s.sustancia_id) AS reactivo,
                       COALESCE(ma.nombre, '—') AS marca,
                       c.densidad_g_ml,
                       c.fecha_compra,
                       c.fecha_recepcion,
                       c.fecha_apertura,
                       c.fecha_vencimiento,
                       COALESCE(c.proveedor, '—') AS proveedor,
                       c.cantidad_reactivo_nominal,
                       c.cantidad_reactivo_actual,
                       COALESCE(u.simbolo, '') AS unidad,
                       COALESCE(cond.nombre, '—') AS condicion,
                       c.condicion_id,
                       COALESCE(a.nombre_areas, '') AS area,
                       COALESCE(m.nombre_meson, '') AS meson,
                       COALESCE(c.posicion, '') AS posicion,
                       COALESCE(c.color_envase, '') AS color_envase,
                       c.masa_envase_vacio_g,
                       c.masa_tapa_g,
                       COALESCE(c.qr, '—') AS qr,
                       COALESCE(c.observaciones, '') AS observaciones,
                       COALESCE(c.imagen_url, '') AS imagen_url
                FROM contenedores c
                INNER JOIN sustancias s ON s.sustancia_id = c.sustancia_id
                LEFT JOIN marcas ma ON ma.marca_id = c.marca_id
                LEFT JOIN unidades u ON u.unidad_id = c.unidad_id
                LEFT JOIN condiciones cond ON cond.condicion_id = c.condicion_id
                LEFT JOIN areas a ON a.area_id = c.area_id
                LEFT JOIN mesones m ON m.meson_id = c.meson_id
                WHERE c.cont_id = @id
                  AND c.laboratorio_id = @laboratorio
                ";
            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("id", ContenedorId);
            cmd.Parameters.AddWithValue("laboratorio", LaboratorioState.LaboratorioId);
            await using var reader = await cmd.ExecuteReaderAsync();
            if (await reader.ReadAsync())
            {
                var unidad = reader.GetString(11);
                var cantidadNominal = FormatCantidad(reader, 9, unidad);
                var cantidadActual = FormatCantidad(reader, 10, unidad);
                detalle = new ContenedorInfo
                {
                    Id = reader.GetString(0),
                    Reactivo = reader.GetString(1),
                    Marca = reader.GetString(2),
                    Densidad = reader.IsDBNull(3) ? "—" : $"{reader.GetDecimal(3)} g/mL",
                    FechaCompra = FormatDate(reader, 4),
                    FechaRecepcion = FormatDate(reader, 5),
                    FechaApertura = FormatDate(reader, 6),
                    FechaVencimiento = FormatDate(reader, 7),
                    Proveedor = reader.GetString(8),
                    CantidadNominal = cantidadNominal,
                    CantidadActual = cantidadActual,
                    Condicion = reader.GetString(12),
                    CondicionId = reader.IsDBNull(13) ? "" : reader.GetString(13),
                    Ubicacion = BuildUbicacion(reader.GetString(14), reader.GetString(15), reader.GetString(16)),
                    Posicion = reader.GetString(16),
                    Envase = BuildEnvase(reader, 17, 18, 19),
                    Qr = reader.GetString(20),
                    Observaciones = reader.GetString(21),
                    ImagenUrl = reader.GetString(22),
                    CantidadNominalValor = reader.IsDBNull(9) ? (decimal?)null : reader.GetDecimal(9),
                    CantidadActualValor = reader.IsDBNull(10) ? (decimal?)null : reader.GetDecimal(10),
                    FechaAperturaValor = reader.IsDBNull(6) ? (DateTime?)null : reader.GetDateTime(6),
                    FechaVencimientoValor = reader.IsDBNull(7) ? (DateTime?)null : reader.GetDateTime(7)
                };
                SyncEditState();
            }
            else
            {
                loadError = "No se encontró el contenedor solicitado.";
            }

            if (detalle is not null)
            {
                await LoadCondicionesAsync();
            }
        }
        catch (Exception ex)
        {
            loadError = ex.Message;
        }
    }

    private static string FormatCantidad(NpgsqlDataReader reader, int index, string unidad)
    {
        if (reader.IsDBNull(index)) return "—";
        var cantidad = reader.GetDecimal(index);
        return $"{cantidad} {unidad}".Trim();
    }

    private static string FormatDate(NpgsqlDataReader reader, int index)
    {
        return reader.IsDBNull(index) ? "—" : reader.GetDateTime(index).ToString("dd/MM/yyyy");
    }

    private static string BuildEnvase(NpgsqlDataReader reader, int colorIndex, int envaseIndex, int tapaIndex)
    {
        var color = reader.GetString(colorIndex);
        var envase = reader.IsDBNull(envaseIndex) ? "" : $"{reader.GetDecimal(envaseIndex)} g";
        var tapa = reader.IsDBNull(tapaIndex) ? "" : $"{reader.GetDecimal(tapaIndex)} g";
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(color)) parts.Add(color);
        if (!string.IsNullOrWhiteSpace(envase)) parts.Add($"envase {envase}");
        if (!string.IsNullOrWhiteSpace(tapa)) parts.Add($"tapa {tapa}");
        return parts.Count == 0 ? "—" : string.Join(" · ", parts);
    }

    private static string BuildUbicacion(string area, string meson, string posicion)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(area)) parts.Add(area);
        if (!string.IsNullOrWhiteSpace(meson)) parts.Add(meson);
        if (!string.IsNullOrWhiteSpace(posicion)) parts.Add(posicion);
        return parts.Count == 0 ? "Sin ubicación" : string.Join(" · ", parts);
    }

    private static string ResolveImagenUrl(string url)
    {
        if (url.StartsWith("http", StringComparison.OrdinalIgnoreCase))
        {
            return url;
        }

        return url.StartsWith("/", StringComparison.OrdinalIgnoreCase) ? url : $"/{url}";
    }

    private async Task LoadCondicionesAsync()
    {
        condiciones.Clear();
        await using var conn = await DataSource.OpenConnectionAsync();
        const string sql = @"SELECT condicion_id, nombre FROM condiciones ORDER BY nombre";
        await using var cmd = new NpgsqlCommand(sql, conn);
        await using var reader = await cmd.ExecuteReaderAsync();
        while (await reader.ReadAsync())
        {
            condiciones.Add(new CondicionOption(reader.GetString(0), reader.GetString(1)));
        }
    }

    private void ToggleEdit()
    {
        showEdit = !showEdit;
        if (showEdit)
        {
            SyncEditState();
        }
        editMessage = null;
    }

    private void SyncEditState()
    {
        if (detalle is null) return;
        edit = new ContenedorEdit
        {
            Proveedor = detalle.Proveedor,
            CantidadNominal = detalle.CantidadNominalValor?.ToString() ?? "",
            CantidadActual = detalle.CantidadActualValor?.ToString() ?? "",
            CondicionId = detalle.CondicionId,
            FechaApertura = detalle.FechaAperturaValor,
            FechaVencimiento = detalle.FechaVencimientoValor,
            Qr = detalle.Qr,
            Observaciones = detalle.Observaciones
        };
    }

    private async Task SaveEditAsync()
    {
        if (detalle is null) return;
        editMessage = null;

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            const string sql = @"
                UPDATE contenedores
                SET proveedor = @proveedor,
                    cantidad_reactivo_nominal = @cantidad_nominal,
                    cantidad_reactivo_actual = @cantidad_actual,
                    condicion_id = @condicion,
                    fecha_apertura = @fecha_apertura,
                    fecha_vencimiento = @fecha_vencimiento,
                    qr = @qr,
                    observaciones = @observaciones
                WHERE cont_id = @id
                  AND laboratorio_id = @laboratorio";
            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("proveedor", string.IsNullOrWhiteSpace(edit.Proveedor) ? (object)DBNull.Value : edit.Proveedor);
            cmd.Parameters.AddWithValue("cantidad_nominal", decimal.TryParse(edit.CantidadNominal, out var nominal) ? nominal : (object)DBNull.Value);
            cmd.Parameters.AddWithValue("cantidad_actual", decimal.TryParse(edit.CantidadActual, out var actual) ? actual : (object)DBNull.Value);
            cmd.Parameters.AddWithValue("condicion", string.IsNullOrWhiteSpace(edit.CondicionId) ? (object)DBNull.Value : edit.CondicionId);
            cmd.Parameters.AddWithValue("fecha_apertura", ToDbDate(edit.FechaApertura));
            cmd.Parameters.AddWithValue("fecha_vencimiento", ToDbDate(edit.FechaVencimiento));
            cmd.Parameters.AddWithValue("qr", string.IsNullOrWhiteSpace(edit.Qr) ? (object)DBNull.Value : edit.Qr);
            cmd.Parameters.AddWithValue("observaciones", string.IsNullOrWhiteSpace(edit.Observaciones) ? (object)DBNull.Value : edit.Observaciones);
            cmd.Parameters.AddWithValue("id", detalle.Id);
            cmd.Parameters.AddWithValue("laboratorio", LaboratorioState.LaboratorioId);
            await cmd.ExecuteNonQueryAsync();

            await OnParametersSetAsync();
            editMessage = "Cambios guardados.";
        }
        catch (Exception ex)
        {
            editMessage = $"Error al guardar: {ex.Message}";
        }
    }

    private static object ToDbDate(DateTime? value)
    {
        return value?.Date ?? DBNull.Value;
    }

    private sealed class ContenedorInfo
    {
        public string Id { get; set; } = "";
        public string Reactivo { get; set; } = "";
        public string Marca { get; set; } = "";
        public string Densidad { get; set; } = "";
        public string Proveedor { get; set; } = "";
        public string CantidadNominal { get; set; } = "";
        public string CantidadActual { get; set; } = "";
        public string Condicion { get; set; } = "";
        public string CondicionId { get; set; } = "";
        public string Ubicacion { get; set; } = "";
        public string Posicion { get; set; } = "";
        public string FechaCompra { get; set; } = "";
        public string FechaRecepcion { get; set; } = "";
        public string FechaApertura { get; set; } = "";
        public DateTime? FechaAperturaValor { get; set; }
        public string FechaVencimiento { get; set; } = "";
        public DateTime? FechaVencimientoValor { get; set; }
        public string Envase { get; set; } = "";
        public string Qr { get; set; } = "";
        public string Observaciones { get; set; } = "";
        public string ImagenUrl { get; set; } = "";
        public decimal? CantidadNominalValor { get; set; }
        public decimal? CantidadActualValor { get; set; }
    }

    private sealed record CondicionOption(string Id, string Nombre);

    private sealed class ContenedorEdit
    {
        public string Proveedor { get; set; } = "";
        public string CantidadNominal { get; set; } = "";
        public string CantidadActual { get; set; } = "";
        public string CondicionId { get; set; } = "";
        public DateTime? FechaApertura { get; set; }
        public DateTime? FechaVencimiento { get; set; }
        public string Qr { get; set; } = "";
        public string Observaciones { get; set; } = "";
    }
}

