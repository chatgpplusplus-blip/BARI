@page "/inventario-materiales/item/{MaterialId}"
@using Npgsql
@using System.Globalization
@using System.IO
@using BARI_web.General_Services
@using Microsoft.AspNetCore.Components.Forms
@inject NpgsqlDataSource DataSource
@inject LaboratorioState LaboratorioState
@inject IWebHostEnvironment HostEnvironment
@inject NavigationManager Nav

<PageTitle>@(detalle is null ? "Material" : detalle.Nombre)</PageTitle>

@if (!string.IsNullOrWhiteSpace(loadError))
{
    <p class="error-note">No se pudo cargar el material: @loadError</p>
}
else if (detalle is null)
{
    <p><em>Cargando…</em></p>
}
else
{
    <a class="back" href="/inventario-materiales">← Volver a materiales</a>

    <section class="detail-card">
        <header>
            <h1>@detalle.Nombre</h1>
            <p class="code">ID: @detalle.MaterialId · Tipo: @detalle.Tipo</p>
        </header>

        <div class="detail-body">
            <div class="detail-main">
                <dl class="info">
                    <div>
                        <dt>Categoría</dt>
                        <dd>@detalle.Categoria</dd>
                    </div>
                    <div>
                        <dt>Subcategoría</dt>
                        <dd>@detalle.Subcategoria</dd>
                    </div>
                    <div>
                        <dt>Capacidad</dt>
                        <dd>@detalle.Capacidad</dd>
                    </div>
                    <div>
                        <dt>Tipo</dt>
                        <dd>@detalle.Tipo</dd>
                    </div>
                    <div>
                        <dt>Marca</dt>
                        <dd>@detalle.Marca</dd>
                    </div>
                    <div>
                        <dt>Estado</dt>
                        <dd>@detalle.Estado</dd>
                    </div>
                    <div>
                        <dt>Cantidad</dt>
                        <dd>@detalle.Cantidad</dd>
                    </div>
                    <div>
                        <dt>Ubicación</dt>
                        <dd>@detalle.Ubicacion</dd>
                    </div>
                    <div>
                        <dt>Descripción</dt>
                        <dd>@(string.IsNullOrWhiteSpace(detalle.Descripcion) ? "—" : detalle.Descripcion)</dd>
                    </div>
                </dl>
            </div>
            @if (!string.IsNullOrWhiteSpace(detalle.ImagenUrl))
            {
                <div class="detail-image">
                    <img src="@ResolveImagenUrl(detalle.ImagenUrl)" alt="Imagen de @detalle.Nombre" />
                </div>
            }
        </div>

        <div class="edit-wrap">
            <button type="button" class="btn-secondary" @onclick="ToggleEdit">
                @(showEdit ? "Cerrar edición" : "Editar")
            </button>
        </div>

        @if (showEdit)
        {
            <div class="edit-panel">
                <h3>Actualizar material</h3>
                <div class="edit-grid">
                    <label>
                        ID
                        <input value="@detalle.MaterialId" disabled />
                    </label>
                    <label>
                        Nombre
                        <input @bind="edit.Nombre" />
                    </label>
                    <label>
                        Subcategoría
                        <select @bind="edit.SubcategoriaId">
                            <option value="">Selecciona una subcategoría</option>
                            @foreach (var subcategoria in subcategorias)
                            {
                                <option value="@subcategoria.Id">@subcategoria.Label</option>
                            }
                        </select>
                    </label>
                    <label>
                        Marca
                        <select @bind="edit.MarcaId">
                            <option value="">Sin marca</option>
                            @foreach (var marca in marcas)
                            {
                                <option value="@marca.Id">@marca.Label</option>
                            }
                        </select>
                    </label>
                    <label>
                        Estado
                        <select @bind="edit.EstadoId">
                            <option value="">Sin estado</option>
                            @foreach (var estado in estados)
                            {
                                <option value="@estado.Id">@estado.Nombre</option>
                            }
                        </select>
                    </label>
                    <label>
                        Área
                        <select @bind="edit.AreaId" @onchange="OnAreaChangedAsync">
                            <option value="">Selecciona un área</option>
                            @foreach (var area in areas)
                            {
                                <option value="@area.Id">@area.Label</option>
                            }
                        </select>
                    </label>
                    <label>
                        Mesón
                        <select @bind="edit.MesonId">
                            <option value="">Selecciona un mesón</option>
                            @foreach (var meson in mesones)
                            {
                                <option value="@meson.Id">@meson.Label</option>
                            }
                        </select>
                    </label>
                    <label>
                        Nivel
                        <input @bind="edit.Nivel" type="number" min="0" />
                    </label>
                    <label>
                        Posición
                        <input @bind="edit.Posicion" />
                    </label>
                    @if (detalle.Tipo.Equals("Vidrio", StringComparison.OrdinalIgnoreCase))
                    {
                        <label>
                            Capacidad
                            <input @bind="edit.Capacidad" type="number" min="0" step="0.01" />
                        </label>
                        <label>
                            Unidad
                            <select @bind="edit.UnidadId">
                                <option value="">Sin unidad</option>
                                @foreach (var unidad in unidades)
                                {
                                    <option value="@unidad.Id">@unidad.Label</option>
                                }
                            </select>
                        </label>
                    }
                    <label>
                        Cantidad
                        <input @bind="edit.Cantidad" type="number" min="0" step="0.01" />
                    </label>
                    <label class="edit-wide">
                        Descripción
                        <textarea rows="2" @bind="edit.Descripcion"></textarea>
                    </label>
                    <label>
                        Imagen
                        <select @bind="edit.ImagenModo" @onchange="OnImagenModoChanged">
                            <option value="url">URL</option>
                            <option value="archivo">Subir archivo</option>
                        </select>
                    </label>
                    @if (edit.ImagenModo == "url")
                    {
                        <label class="edit-wide">
                            URL de imagen
                            <input @bind="edit.ImagenUrl" placeholder="https://..." />
                        </label>
                    }
                    else
                    {
                        <label class="edit-wide">
                            Archivo local
                            <InputFile OnChange="OnImagenArchivoSeleccionado" />
                            @if (!string.IsNullOrWhiteSpace(edit.ImagenArchivo))
                            {
                                <span class="file-note">Archivo: @edit.ImagenArchivo</span>
                            }
                        </label>
                    }
                    <label class="edit-wide">
                        Observaciones
                        <textarea rows="3" @bind="edit.Observaciones"></textarea>
                    </label>
                </div>
                <div class="edit-actions">
                    <button type="button" class="btn" @onclick="SaveEditAsync">Guardar cambios</button>
                    <button type="button" class="btn-danger" @onclick="DeleteMaterialAsync">Eliminar material</button>
                    @if (!string.IsNullOrWhiteSpace(editMessage))
                    {
                        <span class="edit-msg">@editMessage</span>
                    }
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(detalle.Observaciones))
        {
            <div class="notes">
                <strong>Observaciones</strong>
                <p>@detalle.Observaciones</p>
            </div>
        }
    </section>
}

@code {
    [Parameter] public string? MaterialId { get; set; }

    private MaterialInfo? detalle;
    private string? loadError;
    private readonly List<EstadoOption> estados = new();
    private readonly List<SelectOption> subcategorias = new();
    private readonly List<SelectOption> marcas = new();
    private readonly List<SelectOption> unidades = new();
    private readonly List<SelectOption> areas = new();
    private readonly List<SelectOption> mesones = new();
    private bool showEdit;
    private string? editMessage;
    private MaterialEdit edit = new();

    protected override async Task OnParametersSetAsync()
    {
        if (string.IsNullOrWhiteSpace(MaterialId))
        {
            loadError = "No se especificó el ID del material.";
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            const string sql = @"
                WITH materiales AS (
                    SELECT mv.material_id,
                           mv.nombre,
                           mv.subcategoria_id,
                           mv.capacidad_num,
                           mv.unidad_id,
                           mv.marca_id,
                           mv.estado_id,
                           mv.area_id,
                           mv.meson_id,
                           mv.nivel,
                           mv.posicion,
                           mv.laboratorio_id,
                           mv.descripcion,
                           mv.observaciones,
                           mv.cantidad,
                           mv.imagen_url,
                           'Vidrio'::text AS tipo
                    FROM materiales_vidrio mv
                    UNION ALL
                    SELECT mm.material_id,
                           mm.nombre,
                           mm.subcategoria_id,
                           NULL::numeric,
                           NULL::varchar,
                           mm.marca_id,
                           mm.estado_id,
                           mm.area_id,
                           mm.meson_id,
                           mm.nivel,
                           mm.posicion,
                           mm.laboratorio_id,
                           mm.descripcion,
                           mm.observaciones,
                           mm.cantidad,
                           mm.imagen_url,
                           'Montaje'::text AS tipo
                    FROM materiales_montaje mm
                    UNION ALL
                    SELECT mc.material_id,
                           mc.nombre,
                           mc.subcategoria_id,
                           NULL::numeric,
                           NULL::varchar,
                           mc.marca_id,
                           mc.estado_id,
                           mc.area_id,
                           mc.meson_id,
                           mc.nivel,
                           mc.posicion,
                           mc.laboratorio_id,
                           mc.descripcion,
                           mc.observaciones,
                           mc.cantidad,
                           mc.imagen_url,
                           'Consumible'::text AS tipo
                    FROM materiales_consumible mc
                )
                SELECT m.material_id,
                       m.nombre,
                       COALESCE(c.nombre, '') AS categoria,
                       COALESCE(sc.nombre, '') AS subcategoria,
                       COALESCE(m.capacidad_num::text || ' ' || u.simbolo, '—') AS capacidad,
                       COALESCE(ma.nombre, '—') AS marca,
                       COALESCE(ea.nombre, 'Sin estado') AS estado,
                       COALESCE(m.cantidad::text, '—') AS cantidad,
                       m.subcategoria_id,
                       m.marca_id,
                       m.estado_id,
                       m.area_id,
                       m.meson_id,
                       m.nivel,
                       COALESCE(m.posicion, '') AS posicion,
                       COALESCE(m.observaciones, '') AS observaciones,
                       COALESCE(m.descripcion, '') AS descripcion,
                       COALESCE(m.imagen_url, '') AS imagen_url,
                       m.tipo,
                       m.capacidad_num,
                       m.unidad_id,
                       m.cantidad,
                       COALESCE(a.nombre_areas, '') AS area,
                       COALESCE(ms.nombre_meson, '') AS meson,
                       COALESCE(m.posicion, '') AS posicion_text
                FROM materiales m
                LEFT JOIN subcategorias sc ON sc.subcategoria_id = m.subcategoria_id
                LEFT JOIN categorias c ON c.categoria_id = sc.categoria_id
                LEFT JOIN unidades u ON u.unidad_id = m.unidad_id
                LEFT JOIN marcas ma ON ma.marca_id = m.marca_id
                LEFT JOIN estados_activo ea ON ea.estado_id = m.estado_id
                LEFT JOIN areas a ON a.area_id = m.area_id
                LEFT JOIN mesones ms ON ms.meson_id = m.meson_id
                WHERE m.material_id = @materialId
                  AND m.laboratorio_id = @laboratorio
                ";
            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("materialId", MaterialId);
            cmd.Parameters.AddWithValue("laboratorio", LaboratorioState.LaboratorioId);
            await using var reader = await cmd.ExecuteReaderAsync();
            if (await reader.ReadAsync())
            {
                detalle = new MaterialInfo
                {
                    MaterialId = reader.GetString(0),
                    Nombre = reader.GetString(1),
                    Categoria = reader.GetString(2),
                    Subcategoria = reader.GetString(3),
                    Capacidad = reader.GetString(4),
                    Marca = reader.GetString(5),
                    Estado = reader.GetString(6),
                    Cantidad = reader.GetString(7),
                    SubcategoriaId = reader.IsDBNull(8) ? "" : reader.GetString(8),
                    MarcaId = reader.IsDBNull(9) ? "" : reader.GetString(9),
                    EstadoId = reader.IsDBNull(10) ? "" : reader.GetString(10),
                    AreaId = reader.IsDBNull(11) ? "" : reader.GetString(11),
                    MesonId = reader.IsDBNull(12) ? "" : reader.GetString(12),
                    Nivel = reader.IsDBNull(13) ? null : reader.GetInt32(13),
                    Posicion = reader.GetString(14),
                    Observaciones = reader.GetString(15),
                    Descripcion = reader.GetString(16),
                    ImagenUrl = reader.GetString(17),
                    Tipo = reader.GetString(18),
                    CapacidadNum = reader.IsDBNull(19) ? null : Convert.ToDecimal(reader.GetValue(19), CultureInfo.InvariantCulture),
                    UnidadId = reader.IsDBNull(20) ? "" : reader.GetString(20),
                    CantidadValue = reader.IsDBNull(21) ? null : Convert.ToDecimal(reader.GetValue(21), CultureInfo.InvariantCulture),
                    Ubicacion = BuildUbicacion(reader.GetString(22), reader.GetString(23), reader.GetString(24))
                };
                SyncEditState();
            }
            else
            {
                loadError = "No se encontró el material solicitado.";
            }

            if (detalle is not null)
            {
                await LoadEstadosAsync();
                await LoadLookupsAsync();
                await LoadMesonesAsync(detalle.AreaId);
            }
        }
        catch (Exception ex)
        {
            loadError = ex.Message;
        }
    }

    private static string BuildUbicacion(string area, string meson, string posicion)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(area)) parts.Add(area);
        if (!string.IsNullOrWhiteSpace(meson)) parts.Add(meson);
        if (!string.IsNullOrWhiteSpace(posicion)) parts.Add(posicion);
        return parts.Count == 0 ? "Sin ubicación" : string.Join(" · ", parts);
    }

    private async Task LoadEstadosAsync()
    {
        estados.Clear();
        await using var conn = await DataSource.OpenConnectionAsync();
        const string sql = @"SELECT estado_id, nombre FROM estados_activo ORDER BY nombre";
        await using var cmd = new NpgsqlCommand(sql, conn);
        await using var reader = await cmd.ExecuteReaderAsync();
        while (await reader.ReadAsync())
        {
            estados.Add(new EstadoOption(reader.GetString(0), reader.GetString(1)));
        }
    }

    private async Task LoadLookupsAsync()
    {
        subcategorias.Clear();
        marcas.Clear();
        unidades.Clear();
        areas.Clear();

        await using var conn = await DataSource.OpenConnectionAsync();

        const string subcategoriaSql = @"
            SELECT s.subcategoria_id, s.nombre, c.nombre
            FROM subcategorias s
            INNER JOIN categorias c ON c.categoria_id = s.categoria_id
            WHERE c.nombre = ANY(@categorias)
            ORDER BY c.nombre, s.nombre";
        await using (var cmd = new NpgsqlCommand(subcategoriaSql, conn))
        {
            cmd.Parameters.AddWithValue("categorias", CategoriaPermitidas);
            await using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                var label = $"{reader.GetString(2)} · {reader.GetString(1)}";
                subcategorias.Add(new SelectOption(reader.GetString(0), label));
            }
        }

        await using (var cmd = new NpgsqlCommand("SELECT marca_id, nombre FROM marcas ORDER BY nombre", conn))
        await using (var reader = await cmd.ExecuteReaderAsync())
            while (await reader.ReadAsync())
                marcas.Add(new SelectOption(reader.GetString(0), reader.GetString(1)));

        await using (var cmd = new NpgsqlCommand("SELECT unidad_id, nombre, simbolo FROM unidades ORDER BY nombre", conn))
        await using (var reader = await cmd.ExecuteReaderAsync())
            while (await reader.ReadAsync())
                unidades.Add(new SelectOption(reader.GetString(0), $"{reader.GetString(1)} ({reader.GetString(2)})"));

        const string areaSql = @"
            SELECT area_id, nombre_areas
            FROM areas
            WHERE laboratorio_id = @lab
            ORDER BY nombre_areas";
        await using (var cmd = new NpgsqlCommand(areaSql, conn))
        {
            cmd.Parameters.AddWithValue("lab", LaboratorioState.LaboratorioId);
            await using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
                areas.Add(new SelectOption(reader.GetString(0), reader.GetString(1)));
        }
    }

    private async Task LoadMesonesAsync(string? areaId)
    {
        mesones.Clear();
        if (string.IsNullOrWhiteSpace(areaId))
            return;

        await using var conn = await DataSource.OpenConnectionAsync();
        const string mesonSql = @"
            SELECT meson_id, COALESCE(NULLIF(nombre_meson, ''), meson_id) AS nombre_meson
            FROM mesones
            WHERE area_id = @area
            ORDER BY nombre_meson";
        await using var cmd = new NpgsqlCommand(mesonSql, conn);
        cmd.Parameters.AddWithValue("area", areaId);
        await using var reader = await cmd.ExecuteReaderAsync();
        while (await reader.ReadAsync())
        {
            mesones.Add(new SelectOption(reader.GetString(0), reader.GetString(1)));
        }
    }

    private async Task OnAreaChangedAsync(ChangeEventArgs args)
    {
        edit.AreaId = args.Value?.ToString() ?? "";
        edit.MesonId = "";
        await LoadMesonesAsync(edit.AreaId);
    }

    private void OnImagenModoChanged(ChangeEventArgs args)
    {
        var value = args.Value?.ToString();
        edit.ImagenModo = string.IsNullOrWhiteSpace(value) ? "url" : value;
        if (edit.ImagenModo != "url" && edit.ImagenModo != "archivo")
            edit.ImagenModo = "url";
    }

    private async Task OnImagenArchivoSeleccionado(InputFileChangeEventArgs args)
    {
        if (args.FileCount == 0) return;

        var file = args.File;
        var extension = Path.GetExtension(file.Name);
        var fileName = $"material_{Guid.NewGuid():N}{extension}";
        var relativePath = Path.Combine("uploads", "materiales", fileName).Replace("\\", "/");
        var absolutePath = Path.Combine(HostEnvironment.WebRootPath, relativePath);
        Directory.CreateDirectory(Path.GetDirectoryName(absolutePath)!);

        await using var stream = file.OpenReadStream(5 * 1024 * 1024);
        await using var fileStream = File.Create(absolutePath);
        await stream.CopyToAsync(fileStream);

        edit.ImagenUrl = $"/{relativePath}";
        edit.ImagenArchivo = file.Name;
    }

    private void ToggleEdit()
    {
        showEdit = !showEdit;
        if (showEdit)
        {
            SyncEditState();
        }
        editMessage = null;
    }

    private void SyncEditState()
    {
        if (detalle is null) return;
        edit = new MaterialEdit
        {
            Nombre = detalle.Nombre,
            EstadoId = detalle.EstadoId,
            SubcategoriaId = detalle.SubcategoriaId,
            MarcaId = detalle.MarcaId,
            AreaId = detalle.AreaId,
            MesonId = detalle.MesonId,
            Nivel = detalle.Nivel?.ToString() ?? "",
            Posicion = detalle.Posicion,
            Observaciones = detalle.Observaciones,
            Cantidad = detalle.CantidadValue?.ToString(CultureInfo.InvariantCulture) ?? "",
            Capacidad = detalle.CapacidadNum?.ToString(CultureInfo.InvariantCulture) ?? "",
            UnidadId = detalle.UnidadId,
            Descripcion = detalle.Descripcion,
            ImagenUrl = detalle.ImagenUrl,
            ImagenModo = "url"
        };
    }

    private async Task SaveEditAsync()
    {
        if (detalle is null) return;
        editMessage = null;

        var table = detalle.Tipo.ToLowerInvariant() switch
        {
            "vidrio" => "materiales_vidrio",
            "montaje" => "materiales_montaje",
            "consumible" => "materiales_consumible",
            _ => ""
        };

        if (string.IsNullOrWhiteSpace(table))
        {
            editMessage = "Tipo de material no soportado para edición.";
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            var sql = table switch
            {
                "materiales_consumible" => @"
                    UPDATE materiales_consumible
                       SET nombre = @nombre,
                           subcategoria_id = @subcat,
                           marca_id = @marca,
                           estado_id = @estado,
                           cantidad = @cantidad,
                           area_id = @area,
                           meson_id = @meson,
                           nivel = @nivel,
                           posicion = @posicion,
                           descripcion = @descripcion,
                           imagen_url = @imagen,
                           observaciones = @observaciones
                     WHERE material_id = @id
                       AND laboratorio_id = @laboratorio",
                "materiales_montaje" => @"
                    UPDATE materiales_montaje
                       SET nombre = @nombre,
                           subcategoria_id = @subcat,
                           marca_id = @marca,
                           estado_id = @estado,
                           cantidad = @cantidad,
                           area_id = @area,
                           meson_id = @meson,
                           nivel = @nivel,
                           posicion = @posicion,
                           descripcion = @descripcion,
                           imagen_url = @imagen,
                           observaciones = @observaciones
                     WHERE material_id = @id
                       AND laboratorio_id = @laboratorio",
                _ => @"
                    UPDATE materiales_vidrio
                       SET nombre = @nombre,
                           subcategoria_id = @subcat,
                           capacidad_num = @capacidad,
                           unidad_id = @unidad,
                           marca_id = @marca,
                           estado_id = @estado,
                           cantidad = @cantidad,
                           area_id = @area,
                           meson_id = @meson,
                           nivel = @nivel,
                           posicion = @posicion,
                           descripcion = @descripcion,
                           imagen_url = @imagen,
                           observaciones = @observaciones
                     WHERE material_id = @id
                       AND laboratorio_id = @laboratorio"
            };

            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("nombre", string.IsNullOrWhiteSpace(edit.Nombre) ? (object)DBNull.Value : edit.Nombre);
            cmd.Parameters.AddWithValue("subcat", string.IsNullOrWhiteSpace(edit.SubcategoriaId) ? (object)DBNull.Value : edit.SubcategoriaId);
            cmd.Parameters.AddWithValue("marca", string.IsNullOrWhiteSpace(edit.MarcaId) ? (object)DBNull.Value : edit.MarcaId);
            cmd.Parameters.AddWithValue("estado", string.IsNullOrWhiteSpace(edit.EstadoId) ? (object)DBNull.Value : edit.EstadoId);
            cmd.Parameters.AddWithValue("area", string.IsNullOrWhiteSpace(edit.AreaId) ? (object)DBNull.Value : edit.AreaId);
            cmd.Parameters.AddWithValue("meson", string.IsNullOrWhiteSpace(edit.MesonId) ? (object)DBNull.Value : edit.MesonId);
            cmd.Parameters.AddWithValue("nivel", ParseIntOrNull(edit.Nivel));
            cmd.Parameters.AddWithValue("posicion", string.IsNullOrWhiteSpace(edit.Posicion) ? (object)DBNull.Value : edit.Posicion);
            cmd.Parameters.AddWithValue("descripcion", string.IsNullOrWhiteSpace(edit.Descripcion) ? (object)DBNull.Value : edit.Descripcion);
            cmd.Parameters.AddWithValue("imagen", string.IsNullOrWhiteSpace(edit.ImagenUrl) ? (object)DBNull.Value : edit.ImagenUrl);
            cmd.Parameters.AddWithValue("observaciones", string.IsNullOrWhiteSpace(edit.Observaciones) ? (object)DBNull.Value : edit.Observaciones);
            cmd.Parameters.AddWithValue("id", detalle.MaterialId);
            cmd.Parameters.AddWithValue("laboratorio", LaboratorioState.LaboratorioId);

            var cantidad = ParseDecimalOrNull(edit.Cantidad);
            cmd.Parameters.AddWithValue("cantidad", cantidad);

            if (table == "materiales_vidrio")
            {
                cmd.Parameters.AddWithValue("capacidad", ParseDecimalOrNull(edit.Capacidad));
                cmd.Parameters.AddWithValue("unidad", string.IsNullOrWhiteSpace(edit.UnidadId) ? (object)DBNull.Value : edit.UnidadId);
            }

            await cmd.ExecuteNonQueryAsync();
            await OnParametersSetAsync();
            editMessage = "Cambios guardados.";
        }
        catch (Exception ex)
        {
            editMessage = $"Error al guardar: {ex.Message}";
        }
    }

    private async Task DeleteMaterialAsync()
    {
        if (detalle is null) return;
        editMessage = null;

        var table = detalle.Tipo.ToLowerInvariant() switch
        {
            "vidrio" => "materiales_vidrio",
            "montaje" => "materiales_montaje",
            "consumible" => "materiales_consumible",
            _ => ""
        };

        if (string.IsNullOrWhiteSpace(table))
        {
            editMessage = "Tipo de material no soportado para eliminar.";
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
