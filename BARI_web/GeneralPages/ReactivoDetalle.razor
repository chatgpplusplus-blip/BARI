@page "/inventario-sustancias/{Id}"
@using Npgsql
@using BARI_web.General_Services
@inject NpgsqlDataSource DataSource
@inject LaboratorioState LaboratorioState

<PageTitle>@(reactivo is null ? "Reactivo" : reactivo.Nombre)</PageTitle>

@if (!string.IsNullOrWhiteSpace(loadError))
{
    <p class="error-note">No se pudo cargar el reactivo: @loadError</p>
}
else if (reactivo is null)
{
    <p><em>Cargando…</em></p>
}
else
{
    <a class="back" href="/inventario-sustancias">← Volver al inventario</a>

    <section class="reactivo-card">
        <header>
            <h1>
                @if (isEditing)
                {
                    <input class="border p-1" @bind="_editNombreComercial" placeholder="Nombre comercial" />
                }
                else
                {
                    @reactivo.Nombre
                }
            </h1>
            <p class="code">@reactivo.Id</p>
        </header>

        <div class="detail-actions">
            <button class="btn" @onclick="EnableEdit">Editar item</button>
            <button class="btn primary" disabled="@(!isEditing)" @onclick="GuardarAsync">Subir actualización</button>
            <button class="btn" disabled="@(!isEditing)" @onclick="CancelarEdicion">Cancelar</button>
            @if (!string.IsNullOrWhiteSpace(editMsg))
            {
                <span class="text-sm text-gray-500">@editMsg</span>
            }
        </div>

        <dl class="info">
            <div>
                <dt>Nombre comercial</dt>
                <dd>
                    @if (isEditing)
                    {
                        <input class="border p-1" @bind="_editNombreComercial" />
                    }
                    else
                    {
                        @(string.IsNullOrWhiteSpace(reactivo.NombreComercial) ? "—" : reactivo.NombreComercial)
                    }
                </dd>
            </div>
            <div>
                <dt>Nombre químico</dt>
                <dd>
                    @if (isEditing)
                    {
                        <input class="border p-1" @bind="_editNombreQuimico" />
                    }
                    else
                    {
                        @(string.IsNullOrWhiteSpace(reactivo.NombreQuimico) ? "—" : reactivo.NombreQuimico)
                    }
                </dd>
            </div>
            <div>
                <dt>CAS</dt>
                <dd>
                    @if (isEditing)
                    {
                        <input class="border p-1" @bind="_editCas" />
                    }
                    else
                    {
                        @(string.IsNullOrWhiteSpace(reactivo.Cas) ? "—" : reactivo.Cas)
                    }
                </dd>
            </div>
            <div>
                <dt>Forma física</dt>
                <dd>
                    @if (isEditing)
                    {
                        <input class="border p-1" @bind="_editFormaFisica" />
                    }
                    else
                    {
                        @(string.IsNullOrWhiteSpace(reactivo.FormaFisica) ? "—" : reactivo.FormaFisica)
                    }
                </dd>
            </div>
            <div>
                <dt>Sustancia controlada</dt>
                <dd>
                    @if (isEditing)
                    {
                        <label class="text-sm text-gray-600">
                            <input type="checkbox" @bind="_editControlada" /> Sustancia controlada
                        </label>
                    }
                    else
                    {
                        @(reactivo.SustanciaControlada ? "Sí" : "No")
                    }
                </dd>
            </div>
        </dl>

        <div class="notes">
            <strong>Observaciones</strong>
            @if (isEditing)
            {
                <textarea class="border p-1" rows="3" @bind="_editObservaciones"></textarea>
            }
            else if (!string.IsNullOrWhiteSpace(reactivo.Observaciones))
            {
                <p>@reactivo.Observaciones</p>
            }
            else
            {
                <p>—</p>
            }
        </div>

        <section class="contenedores">
            <h2>Contenedores</h2>
            <p class="muted">@contenedores.Count contenedores registrados.</p>
            @if (contenedores.Count == 0)
            {
                <p class="empty-note">No hay contenedores asociados a esta sustancia.</p>
            }
            else
            {
                <div class="table-wrap">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Cantidad</th>
                                <th>Condición</th>
                                <th>Proveedor</th>
                                <th>Apertura</th>
                                <th>Vencimiento</th>
                                <th>Envase</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cont in contenedores)
                            {
                                <tr>
                                    <td>
                                        <NavLink href="@($"/inventario-sustancias/contenedor/{cont.Id}")">
                                            @cont.Id
                                        </NavLink>
                                    </td>
                                    <td>@cont.Cantidad</td>
                                    <td>@cont.Condicion</td>
                                    <td>@cont.Proveedor</td>
                                    <td>@cont.FechaApertura</td>
                                    <td>@cont.FechaVencimiento</td>
                                    <td>@cont.Envase</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    </section>
}

@code {
    [Parameter] public string? Id { get; set; }

    private ReactivoInfo? reactivo;
    private readonly List<ContenedorInfo> contenedores = new();
    private string? loadError;
    private string? editMsg;
    private bool isEditing;

    private string? _editNombreComercial;
    private string? _editNombreQuimico;
    private string? _editCas;
    private string? _editFormaFisica;
    private bool _editControlada;
    private string? _editObservaciones;

    protected override async Task OnParametersSetAsync()
    {
        if (string.IsNullOrWhiteSpace(Id))
        {
            loadError = "No se especificó el ID del reactivo.";
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            const string sql = @"
                SELECT sustancia_id,
                       COALESCE(NULLIF(nombre_comercial, ''),
                                NULLIF(nombre_quimico, ''),
                                sustancia_id) AS nombre,
                       COALESCE(nombre_comercial, '') AS nombre_comercial,
                       COALESCE(nombre_quimico, '') AS nombre_quimico,
                       COALESCE(cas, '') AS cas,
                       COALESCE(forma_fisica, '') AS forma_fisica,
                       COALESCE(sustancia_controlada, false) AS sustancia_controlada,
                       COALESCE(observaciones, '') AS observaciones
                FROM sustancias
                WHERE sustancia_id = @id
                  AND laboratorio_id = @laboratorio
                ";

            await using (var cmd = new NpgsqlCommand(sql, conn))
            {
                cmd.Parameters.AddWithValue("id", Id);
                cmd.Parameters.AddWithValue("laboratorio", LaboratorioState.LaboratorioId);
                await using var reader = await cmd.ExecuteReaderAsync();
                if (await reader.ReadAsync())
                {
                    reactivo = new ReactivoInfo
                    {
                        Id = reader.GetString(0),
                        Nombre = reader.GetString(1),
                        NombreComercial = reader.GetString(2),
                        NombreQuimico = reader.GetString(3),
                        Cas = reader.GetString(4),
                        FormaFisica = reader.GetString(5),
                        SustanciaControlada = reader.GetBoolean(6),
                        Observaciones = reader.GetString(7)
                    };
                }
                else
                {
                    loadError = "No se encontró el reactivo solicitado.";
                    return;
                }
            }

            const string sqlContenedores = @"
                SELECT c.cont_id,
                       COALESCE(c.cantidad_reactivo_actual, c.cantidad_reactivo_nominal, 0) AS cantidad,
                       COALESCE(u.simbolo, '') AS unidad,
                       COALESCE(cond.nombre, '') AS condicion,
                       c.fecha_apertura,
                       c.fecha_vencimiento,
                       COALESCE(c.proveedor, '') AS proveedor,
                       COALESCE(c.color_envase, '') AS color_envase
                FROM contenedores c
                LEFT JOIN unidades u ON u.unidad_id = c.unidad_id
                LEFT JOIN condiciones cond ON cond.condicion_id = c.condicion_id
                WHERE c.sustancia_id = @id
                ORDER BY c.cont_id
                ";
            await using var contCmd = new NpgsqlCommand(sqlContenedores, conn);
            contCmd.Parameters.AddWithValue("id", Id);
            await using var contReader = await contCmd.ExecuteReaderAsync();
            contenedores.Clear();
            while (await contReader.ReadAsync())
            {
                var cantidad = contReader.GetDecimal(1);
                var unidad = contReader.GetString(2);
                var fechaApertura = contReader.IsDBNull(4) ? "" : contReader.GetDateTime(4).ToString("dd/MM/yyyy");
                var fechaVencimiento = contReader.IsDBNull(5) ? "" : contReader.GetDateTime(5).ToString("dd/MM/yyyy");
                var colorEnvase = contReader.GetString(7);
                contenedores.Add(new ContenedorInfo
                {
                    Id = contReader.GetString(0),
                    Cantidad = $"{cantidad} {unidad}".Trim(),
                    Condicion = contReader.GetString(3),
                    FechaApertura = string.IsNullOrWhiteSpace(fechaApertura) ? "—" : fechaApertura,
                    FechaVencimiento = string.IsNullOrWhiteSpace(fechaVencimiento) ? "—" : fechaVencimiento,
                    Proveedor = string.IsNullOrWhiteSpace(contReader.GetString(6)) ? "—" : contReader.GetString(6),
                    Envase = string.IsNullOrWhiteSpace(colorEnvase) ? "—" : colorEnvase
                });
            }
        }
        catch (Exception ex)
        {
            loadError = ex.Message;
        }

        if (reactivo is not null)
        {
            ResetEditState();
        }
    }

    private void EnableEdit()
    {
        if (reactivo is null) return;
        isEditing = true;
        editMsg = null;
    }

    private void CancelarEdicion()
    {
        if (reactivo is null) return;
        ResetEditState();
        editMsg = "Edición cancelada.";
    }

    private void ResetEditState()
    {
        if (reactivo is null) return;
        isEditing = false;
        _editNombreComercial = reactivo.NombreComercial;
        _editNombreQuimico = reactivo.NombreQuimico;
        _editCas = reactivo.Cas;
        _editFormaFisica = reactivo.FormaFisica;
        _editControlada = reactivo.SustanciaControlada;
        _editObservaciones = reactivo.Observaciones;
    }

    private async Task GuardarAsync()
    {
        if (reactivo is null) return;

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            const string sql = @"
                UPDATE sustancias
                SET nombre_comercial = @comercial,
                    nombre_quimico = @quimico,
                    cas = @cas,
                    forma_fisica = @forma,
                    sustancia_controlada = @controlada,
                    observaciones = @obs
                WHERE sustancia_id = @id
                  AND laboratorio_id = @lab";
            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("comercial", string.IsNullOrWhiteSpace(_editNombreComercial) ? (object)DBNull.Value : _editNombreComercial!);
            cmd.Parameters.AddWithValue("quimico", string.IsNullOrWhiteSpace(_editNombreQuimico) ? (object)DBNull.Value : _editNombreQuimico!);
            cmd.Parameters.AddWithValue("cas", string.IsNullOrWhiteSpace(_editCas) ? (object)DBNull.Value : _editCas!);
            cmd.Parameters.AddWithValue("forma", string.IsNullOrWhiteSpace(_editFormaFisica) ? (object)DBNull.Value : _editFormaFisica!);
            cmd.Parameters.AddWithValue("controlada", _editControlada);
            cmd.Parameters.AddWithValue("obs", string.IsNullOrWhiteSpace(_editObservaciones) ? (object)DBNull.Value : _editObservaciones!);
            cmd.Parameters.AddWithValue("id", reactivo.Id);
            cmd.Parameters.AddWithValue("lab", LaboratorioState.LaboratorioId);
            await cmd.ExecuteNonQueryAsync();
        }
        catch (Exception ex)
        {
            editMsg = $"No se pudo guardar: {ex.Message}";
            return;
        }

        editMsg = "Actualización guardada.";
        isEditing = false;
        await OnParametersSetAsync();
    }

    private sealed class ReactivoInfo
    {
        public string Id { get; set; } = "";
        public string Nombre { get; set; } = "";
        public string NombreComercial { get; set; } = "";
        public string NombreQuimico { get; set; } = "";
        public string Cas { get; set; } = "";
        public string FormaFisica { get; set; } = "";
        public bool SustanciaControlada { get; set; }
        public string Observaciones { get; set; } = "";
    }

    private sealed class ContenedorInfo
    {
        public string Id { get; set; } = "";
        public string Cantidad { get; set; } = "";
        public string Condicion { get; set; } = "";
        public string Proveedor { get; set; } = "";
        public string FechaApertura { get; set; } = "";
        public string FechaVencimiento { get; set; } = "";
        public string Envase { get; set; } = "";
    }
}

