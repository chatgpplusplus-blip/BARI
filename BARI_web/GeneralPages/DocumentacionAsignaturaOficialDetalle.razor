@page "/documentacion/{Asignatura}/oficial/{Tema}"

<PageTitle>Documentación oficial</PageTitle>

<section class="page-card">
    <h2>Documentación oficial</h2>
    <p>
        Asignatura: <strong>@Asignatura</strong> · Tema: <strong>@Tema</strong>.
        Aquí se mostrará la referencia oficial seleccionada.
    </p>
    <LaboratorioSelector />
</section>

<section class="page-card" style="margin-top:1.5rem;">
    <h3>Listado (ejemplo)</h3>
    <div class="table-wrap">
        <table>
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Asociaciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>REF-001</td>
                    <td>Elemento de referencia oficial</td>
                    <td>3 sustancias</td>
                </tr>
                <tr>
                    <td>REF-002</td>
                    <td>Elemento de referencia oficial</td>
                    <td>5 sustancias</td>
                </tr>
                <tr>
                    <td>REF-003</td>
                    <td>Elemento de referencia oficial</td>
                    <td>2 sustancias</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

@code {
    [Parameter] public string Asignatura { get; set; } = "";
    [Parameter] public string Tema { get; set; } = "";
}

<style>
    .table-wrap { overflow-x:auto; }
    table { width:100%; border-collapse:collapse; background:#fff; }
    th, td { padding:0.6rem; border-bottom:1px solid #e5e7eb; text-align:left; }
    th { background:#f3f4f6; font-weight:600; }
</style>
