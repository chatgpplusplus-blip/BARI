    {
        var value = args.Value?.ToString();
        if (string.IsNullOrWhiteSpace(value))
        {
            Nav.NavigateTo("/inventario-equipo");
            return;
        }

        Nav.NavigateTo($"/inventario-equipo/{value}");
    }

