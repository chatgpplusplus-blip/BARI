@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing


<div class="layout-root">
	<header class="topbar">
		<div class="topbar-left">
			<!-- BOTÓN TOGGLE -->
			<button class="menu-toggle" @onclick="ToggleSidebar">
				☰
			</button>


			<div class="topbar-brand">
				<img class="topbar-logo"
					 src="https://vc4a.com/wp-content/uploads/2022/06/198068246_2916680591924255_5728041621538232491_n.jpg"
					 alt="Logo UPSA" />
				<div class="topbar-text">
					<span class="topbar-title">BARI</span>
					<span class="topbar-subtitle">Inventario de Laboratorios · UPSA</span>
				</div>
			</div>
		</div>


		<div class="topbar-meta">
			<span class="badge">Laboratorio base: Química</span>
		</div>
	</header>


	<div class="content">
		<!-- SIDEBAR -->
		<aside class="sidebar @(isSidebarOpen ? "open" : "")">
			<NavLink class="menu-btn" href="/" Match="NavLinkMatch.All">
				INICIO
			</NavLink>


			<small class="hint">Panel principal del inventario</small>


			<div class="search-box">
				<label class="search-label">BUSCAR</label>
				<input @bind="searchText" class="search-input" placeholder="Próximamente" />
			</div>


			<nav class="menu-list">
				<NavLink class="menu-item" href="/baribot">BARI BOT</NavLink>
				<NavLink class="menu-item" href="/documentaciones">DOCUMENTACIONES</NavLink>
				<NavLink class="menu-item" href="/areas">ÁREAS</NavLink>
				<NavLink class="menu-item" href="/contenidos">ASIGNATURAS</NavLink>
				<NavLink class="menu-item" href="/inventario-materiales">INVENTARIO MATERIALES</NavLink>
				<NavLink class="menu-item" href="/inventario-equipo">INVENTARIO EQUIPO</NavLink>
				<NavLink class="menu-item" href="/inventario-sustancias">INVENTARIO SUSTANCIAS</NavLink>
				<NavLink class="menu-item" href="/inventario-instalaciones">INSTALACIONES</NavLink>
				<NavLink class="menu-item" href="/inventario-mesones">MESONES</NavLink>
				<NavLink class="menu-item" href="/informacion-tecnica">DATOS TÉCNICOS</NavLink>
			</nav>
		</aside>


		<!-- CONTENIDO -->
		<main class="main" @onclick="CloseSidebarOnMobile">
			@Body
		</main>
	</div>
</div>


@code {
	private string? searchText;
	private bool isSidebarOpen = false;


	void ToggleSidebar()
	{
		isSidebarOpen = !isSidebarOpen;
	}


	void CloseSidebarOnMobile()
	{
		if (isSidebarOpen)
			isSidebarOpen = false;
	}
}

<style>
    .layout-root {
        display: flex;
        flex-direction: column;
        height: 100vh;
        font-family: "Segoe UI", system-ui, sans-serif;
    }

    .topbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #0b2a68;
        color: white;
        padding: 0.6rem 1rem;
        box-shadow: 0 6px 18px rgba(0,0,0,.25);
    }

    .topbar-left {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .menu-toggle {
        font-size: 1.6rem;
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
    }

    .topbar-brand {
        display: flex;
        align-items: center;
        gap: 0.7rem;
    }

    .topbar-logo {
        width: 46px;
        height: 46px;
        background: white;
        border-radius: 10px;
        padding: 5px;
    }

    .topbar-title {
        font-weight: 700;
    }

    .topbar-subtitle {
        font-size: 0.85rem;
        color: #dbe7ff;
    }

    .content {
        display: flex;
        flex: 1;
        overflow: hidden;
    }

    /* SIDEBAR */
    .sidebar {
        width: 280px;
        background: linear-gradient(180deg, #052767, #2c8cb6, #68E3C8);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: .6rem;
        transition: transform .3s ease;
    }

    /* MOBILE: oculto por defecto */
    @@media (max-width: 900px) {
        .sidebar

    {
        position: fixed;
        top: 64px;
        left: 0;
        height: calc(100vh - 64px);
        transform: translateX(-100%);
        z-index: 1000;
    }

    .sidebar.open {
        transform: translateX(0);
    }

    }

    .main {
        flex: 1;
        background: #f7f8fb;
        padding: 1.5rem;
        overflow: auto;
    }

    .menu-btn, .menu-item {
        background: rgba(255,255,255,.12);
        color: white;
        padding: 0.65rem;
        border-radius: 0.6rem;
        text-decoration: none;
        font-weight: 600;
    }

        .menu-btn:hover, .menu-item:hover {
            background: rgba(255,255,255,.25);
        }

        .menu-item.active {
            background: rgba(255,255,255,.35);
        }

    .search-input {
        border-radius: 0.5rem;
        padding: 0.55rem;
        border: 1px solid rgba(255,255,255,.3);
        background: rgba(255,255,255,.15);
        color: white;
    }

        .search-input::placeholder {
            color: #e2e8ff;
        }

    .badge {
        background: rgba(255,255,255,.2);
        padding: 0.3rem 0.7rem;
        border-radius: 999px;
        font-size: 0.8rem;
    }
</style>
