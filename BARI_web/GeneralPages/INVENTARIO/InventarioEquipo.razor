    private static string BuildUbicacion(string area, string meson, int? nivel, string posicion)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(area)) parts.Add(area);
        if (!string.IsNullOrWhiteSpace(meson)) parts.Add(meson);
        if (nivel is not null) parts.Add($"Nivel {nivel}");
        if (!string.IsNullOrWhiteSpace(posicion)) parts.Add(posicion);
        return parts.Count == 0 ? "—" : string.Join(" · ", parts);
    }

    private static string FormatAltura(decimal? alturaCm)
    {
        if (alturaCm is null) return "—";
        return alturaCm.Value.ToString(CultureInfo.InvariantCulture);
    }

    private static string BuildCalibracion(bool requiereCalibracion, DateTime? proximaFecha)
    {
        if (!requiereCalibracion) return "No aplica";
        if (proximaFecha is null) return "Requiere calibración";
        return proximaFecha.Value.Date < DateTime.Today
            ? $"Vencida ({proximaFecha:dd/MM/yyyy})"
            : $"OK (próx. {proximaFecha:dd/MM/yyyy})";
    }

    private static string ResolveUrl(string? url)
    {
        if (string.IsNullOrWhiteSpace(url)) return "";
        if (url.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return url;
        return url.StartsWith("/", StringComparison.OrdinalIgnoreCase) ? url : $"/{url}";
    }

