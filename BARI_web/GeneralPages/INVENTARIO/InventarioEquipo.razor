                decimal? altura = r.IsDBNull(8) ? (decimal?)null : r.GetDecimal(8);

                var subcats = r.GetString(9);
                var eqCount = r.IsDBNull(10) ? 0 : r.GetInt64(10);

                var area = r.GetString(11);
                var meson = r.GetString(12);
                var pos = r.GetString(13);
                var nivel = r.IsDBNull(14) ? (int?)null : r.GetInt32(14);

                var ubic = BuildUbicacion(area, meson, nivel, pos);

