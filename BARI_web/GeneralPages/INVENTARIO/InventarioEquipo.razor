    private static async Task<string> CloneManualDocForModeloAsync(
        NpgsqlConnection conn,
        NpgsqlTransaction tx,
        string templateDocId,
        string modeloId,
        string modeloNombre,
        string? marcaId)
    {
        string tituloBase, catId, subId;
        string? desc, url, archivo, notas, img, marcaTpl, proc;
        int? labctx;

        const string sel = @"
        SELECT titulo, categoria_id, subcategoria_id,
               descripcion_detalle, url, archivo_local, notas, imagen_url,
               marca_id, procedencia, laboratorio_contexto_id
        FROM documentos
        WHERE documento_id = @id
          AND alcance = 'EQUIPO'
        LIMIT 1;";

        await using (var cmd = new NpgsqlCommand(sel, conn, tx))
        {
            cmd.Parameters.AddWithValue("id", templateDocId);
            await using var r = await cmd.ExecuteReaderAsync();

            if (!await r.ReadAsync())
                throw new Exception("El documento seleccionado no existe o no es de alcance EQUIPO.");

            tituloBase = r.GetString(0);
            catId = r.GetString(1);
            subId = r.GetString(2);

            desc = r.IsDBNull(3) ? null : r.GetString(3);
            url = r.IsDBNull(4) ? null : r.GetString(4);
            archivo = r.IsDBNull(5) ? null : r.GetString(5);
            notas = r.IsDBNull(6) ? null : r.GetString(6);
            img = r.IsDBNull(7) ? null : r.GetString(7);

            marcaTpl = r.IsDBNull(8) ? null : r.GetString(8);
            proc = r.IsDBNull(9) ? null : r.GetString(9);

            labctx = r.IsDBNull(10) ? (int?)null : r.GetInt32(10);
        }

        var newDocId = $"doc_{Guid.NewGuid():N}".Substring(0, 12);
        var titulo = $"Manual · {modeloNombre}".Trim();

        const string ins = @"
        INSERT INTO documentos
        (documento_id, titulo,
         categoria_id, subcategoria_id,
         descripcion_detalle, url, archivo_local, notas, imagen_url,
         marca_id, procedencia,
         laboratorio_contexto_id,
         alcance,
         laboratorio_id, laboratorio_realizado_id,
         asignatura_id, experiencia_id,
         modelo_equipo_id, material_id, sustancia_id, cont_id)
        VALUES
        (@id, @titulo,
         @cat, @sub,
         @desc, @url, @archivo, @notas, @img,
         @marca, @proc,
         @labctx,
         'EQUIPO',
         NULL, NULL,
         NULL, NULL,
         @modelo, NULL, NULL, NULL);";

        await using (var cmd = new NpgsqlCommand(ins, conn, tx))
        {
            cmd.Parameters.AddWithValue("id", newDocId);
            cmd.Parameters.AddWithValue("titulo", titulo);

            cmd.Parameters.AddWithValue("cat", catId);
            cmd.Parameters.AddWithValue("sub", subId);

            cmd.Parameters.AddWithValue("desc", string.IsNullOrWhiteSpace(desc) ? (object)DBNull.Value : desc);
            cmd.Parameters.AddWithValue("url", string.IsNullOrWhiteSpace(url) ? (object)DBNull.Value : url);
            cmd.Parameters.AddWithValue("archivo", string.IsNullOrWhiteSpace(archivo) ? (object)DBNull.Value : archivo);
            cmd.Parameters.AddWithValue("notas", string.IsNullOrWhiteSpace(notas) ? (object)DBNull.Value : notas);
            cmd.Parameters.AddWithValue("img", string.IsNullOrWhiteSpace(img) ? (object)DBNull.Value : img);

            var marcaFinal = !string.IsNullOrWhiteSpace(marcaTpl) ? marcaTpl : (string.IsNullOrWhiteSpace(marcaId) ? null : marcaId);
            cmd.Parameters.AddWithValue("marca", string.IsNullOrWhiteSpace(marcaFinal) ? (object)DBNull.Value : marcaFinal);

            var procFinal = !string.IsNullOrWhiteSpace(proc) ? proc : (string.IsNullOrWhiteSpace(marcaFinal) ? "INTERNO LABORATORIO" : "INSTITUCION INTERNACIONAL");
            cmd.Parameters.AddWithValue("proc", procFinal);

            cmd.Parameters.AddWithValue("labctx", labctx is null ? (object)DBNull.Value : labctx.Value);

            cmd.Parameters.AddWithValue("modelo", modeloId);

            await cmd.ExecuteNonQueryAsync();
        }

        return newDocId;
    }

