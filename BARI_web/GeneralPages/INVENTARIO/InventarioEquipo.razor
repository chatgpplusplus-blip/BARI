    private async Task SubirModeloAsync()
    {
        _nuevoModeloMsg = null;

        if (string.IsNullOrWhiteSpace(_nuevoModeloNombre))
        {
            _nuevoModeloMsg = "Ingresa el nombre del modelo (obligatorio).";
            return;
        }

        if (string.IsNullOrWhiteSpace(_nuevoModeloCategoriaId))
        {
            _nuevoModeloMsg = "Selecciona una categoría (obligatorio).";
            return;
        }

        if (_nuevoModeloSubcategoriaIds.Count == 0)
        {
            _nuevoModeloMsg = "Selecciona al menos una subcategoría (obligatorio).";
            return;
        }

        // ✅ Parse altura_cm
        decimal? alturaCm = null;
        if (!string.IsNullOrWhiteSpace(_nuevoModeloAlturaCm))
        {
            if (!decimal.TryParse(_nuevoModeloAlturaCm, NumberStyles.Any, CultureInfo.InvariantCulture, out var alt))
            {
                _nuevoModeloMsg = "Altura (cm) inválida.";
                return;
            }
            alturaCm = alt;
        }

        var modeloId = string.IsNullOrWhiteSpace(_nuevoModeloId)
            ? $"mod_{Guid.NewGuid():N}".Substring(0, 12)
            : _nuevoModeloId!.Trim();

        var selectedSubs = _nuevoModeloSubcategoriaIds.ToArray();

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();
            await using var tx = await conn.BeginTransactionAsync();

            const string checkSubsSame = @"
                SELECT COUNT(*)
                FROM subcategorias
                WHERE subcategoria_id = ANY(@subs)
                  AND categoria_id = @cat;";

            const string checkSubsAny = @"
                SELECT COUNT(*)
                FROM subcategorias
                WHERE subcategoria_id = ANY(@subs)
                  AND categoria_id = ANY(@cats);";

            var isMixto = string.Equals(_nuevoModeloCategoriaId, "equipo-mixto", StringComparison.OrdinalIgnoreCase);

            await using (var chk = new NpgsqlCommand(isMixto ? checkSubsAny : checkSubsSame, conn, tx))
            {
                chk.Parameters.AddWithValue("subs", selectedSubs);

                if (isMixto)
                    chk.Parameters.AddWithValue("cats", CategoriaEquipoIds);
                else
                    chk.Parameters.AddWithValue("cat", _nuevoModeloCategoriaId!);

                var okCount = Convert.ToInt64(await chk.ExecuteScalarAsync());
                if (okCount != selectedSubs.Length)
                {
                    _nuevoModeloMsg = "Hay subcategorías inválidas (no pertenecen a las categorías permitidas).";
                    await tx.RollbackAsync();
                    return;
                }
            }

            // ✅ INSERT incluye altura_cm
            const string sqlIns = @"
                INSERT INTO modelos_equipo
                (modelo_id, marca_id, categoria_id, nombre_modelo, es_calibrable,
                 manual_url, notas, descripcion, imagen_url, altura_cm)
                VALUES
                (@id, @marca, @cat, @nombre, @cal,
                 @manual, @notas, @desc, @img, @altura_cm)
                ON CONFLICT (modelo_id) DO NOTHING;";

            int rows;
            await using (var cmd = new NpgsqlCommand(sqlIns, conn, tx))
            {
                cmd.Parameters.AddWithValue("id", modeloId);
                cmd.Parameters.AddWithValue("marca", string.IsNullOrWhiteSpace(_nuevoModeloMarcaId) ? (object)DBNull.Value : _nuevoModeloMarcaId!);
                cmd.Parameters.AddWithValue("cat", _nuevoModeloCategoriaId!);
                cmd.Parameters.AddWithValue("nombre", _nuevoModeloNombre!.Trim());
                cmd.Parameters.AddWithValue("cal", _nuevoModeloEsCalibrable);

                cmd.Parameters.AddWithValue("manual", DBNull.Value);
                cmd.Parameters.AddWithValue("notas", string.IsNullOrWhiteSpace(_nuevoModeloNotas) ? (object)DBNull.Value : _nuevoModeloNotas!.Trim());
                cmd.Parameters.AddWithValue("desc", string.IsNullOrWhiteSpace(_nuevoModeloDescripcion) ? (object)DBNull.Value : _nuevoModeloDescripcion!.Trim());
                cmd.Parameters.AddWithValue("img", string.IsNullOrWhiteSpace(_nuevoModeloImagenUrl) ? (object)DBNull.Value : _nuevoModeloImagenUrl!.Trim());

                cmd.Parameters.AddWithValue("altura_cm", alturaCm is null ? (object)DBNull.Value : alturaCm.Value);

                rows = await cmd.ExecuteNonQueryAsync();
            }

            if (rows == 0)
            {
                _nuevoModeloMsg = $"El ID '{modeloId}' ya existe. Usa otro ID o deja el campo vacío.";
                await tx.RollbackAsync();
                return;
            }

            const string sqlSubs = @"
                INSERT INTO modelo_equipo_subcategorias (modelo_id, subcategoria_id)
                SELECT @mid, x
                FROM unnest(@subs::varchar[]) AS x
                ON CONFLICT DO NOTHING;";

            await using (var cmd = new NpgsqlCommand(sqlSubs, conn, tx))
            {
                cmd.Parameters.AddWithValue("mid", modeloId);
                cmd.Parameters.AddWithValue("subs", selectedSubs);
                await cmd.ExecuteNonQueryAsync();
            }

            // Si eligió un “manual plantilla”, clonarlo y pegarlo a este nuevo modelo
            if (!string.IsNullOrWhiteSpace(_nuevoModeloManualDocTemplateId))
            {
                var newManualDocId = await CloneManualDocForModeloAsync(
                    conn, tx,
                    templateDocId: _nuevoModeloManualDocTemplateId!,
                    modeloId: modeloId,
                    modeloNombre: _nuevoModeloNombre!.Trim(),
                    marcaId: _nuevoModeloMarcaId
                );

                const string upManual = @"UPDATE modelos_equipo SET manual_url = @doc WHERE modelo_id = @mid;";
                await using (var up = new NpgsqlCommand(upManual, conn, tx))
                {
                    up.Parameters.AddWithValue("doc", newManualDocId);
                    up.Parameters.AddWithValue("mid", modeloId);
                    await up.ExecuteNonQueryAsync();
                }
            }

            await tx.CommitAsync();

            // Reset form modelo
            _nuevoModeloId = null;
            _nuevoModeloNombre = null;
            _nuevoModeloMarcaId = null;
            _nuevoModeloCategoriaId = "equipo-mixto";
            _nuevoModeloEsCalibrable = false;

            _nuevoModeloAlturaCm = null;

            _nuevoModeloManualDocTemplateId = null;
            _nuevoModeloDescripcion = null;
            _nuevoModeloNotas = null;
            _nuevoModeloSubcategoriaIds.Clear();
            _nuevoModeloImagenUrl = null;
            _nuevoModeloImagenModo = "url";
            _nuevoModeloImagenArchivo = null;

            _nuevoModeloMsg = "Modelo registrado.";

            // refrescar lookups y listas
            await LoadLookupsAsync();
            await LoadModelosAsync();
            await LoadEquiposAsync();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            _nuevoModeloMsg = $"Error al registrar modelo: {ex.Message}";
        }
    }

