        if (!_verTodos && string.IsNullOrWhiteSpace(SubcategoriaId))
        {
            modelos.Clear();
            modelosLoadError = null;
            return;
        }

        try
        {
            await using var conn = await DataSource.OpenConnectionAsync();

            // ✅ incluye me.altura_cm
            const string sql = @"
SELECT me.modelo_id,
       me.nombre_modelo,
       COALESCE(ma.nombre,'') AS marca_nombre,
       ma.imagen_url AS marca_imagen,
       COALESCE(c.nombre,'') AS categoria_nombre,
       me.es_calibrable,
       me.manual_url,
       me.imagen_url,
       me.altura_cm,

       COALESCE(string_agg(DISTINCT (c2.nombre || ' · ' || sc.nombre), ', ' ORDER BY (c2.nombre || ' · ' || sc.nombre)), '') AS subcats,

       COALESCE(stats.eq_count, 0) AS eq_count,

       COALESCE(a.nombre_areas,'') AS area,
       COALESCE(ms.nombre_meson,'') AS meson,
       COALESCE(loc.posicion,'') AS posicion,
       loc.nivel

FROM modelos_equipo me
LEFT JOIN marcas ma ON ma.marca_id = me.marca_id
LEFT JOIN categorias c ON c.categoria_id = me.categoria_id

LEFT JOIN modelo_equipo_subcategorias mesc ON mesc.modelo_id = me.modelo_id
LEFT JOIN subcategorias sc ON sc.subcategoria_id = mesc.subcategoria_id
LEFT JOIN categorias c2 ON c2.categoria_id = sc.categoria_id

LEFT JOIN LATERAL (
    SELECT COUNT(*) AS eq_count
    FROM equipos e
    WHERE e.modelo_id = me.modelo_id
      AND e.laboratorio_id = @lab
) stats ON true

LEFT JOIN LATERAL (
    SELECT area_id, meson_id, posicion, nivel
    FROM equipos e
    WHERE e.modelo_id = me.modelo_id
      AND e.laboratorio_id = @lab
    ORDER BY e.fecha_compra DESC NULLS LAST, e.equipo_id
    LIMIT 1
) loc ON true
LEFT JOIN areas a ON a.area_id = loc.area_id
LEFT JOIN mesones ms ON ms.meson_id = loc.meson_id

WHERE me.categoria_id = ANY(@cats)
  AND (
        @subcategoria IS NULL
        OR EXISTS (
            SELECT 1
            FROM modelo_equipo_subcategorias x
            WHERE x.modelo_id = me.modelo_id
              AND x.subcategoria_id = @subcategoria
        )
  )

GROUP BY me.modelo_id, me.nombre_modelo, ma.nombre, ma.imagen_url, c.nombre,
         me.es_calibrable, me.manual_url, me.imagen_url, me.altura_cm,
         stats.eq_count,
         a.nombre_areas, ms.nombre_meson, loc.posicion, loc.nivel

ORDER BY me.nombre_modelo, me.modelo_id;";

            await using var cmd = new NpgsqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("lab", LaboratorioState.LaboratorioId);
            cmd.Parameters.AddWithValue("cats", CategoriaEquipoIds);

            var pSub = cmd.Parameters.Add("subcategoria", NpgsqlTypes.NpgsqlDbType.Varchar);
