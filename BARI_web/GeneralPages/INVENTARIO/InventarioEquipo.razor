@page "/inventario-equipo"
@page "/inventario-equipo/categoria/{SubcategoriaId}"
@page "/inventario-equipo/todos"

@using Npgsql
@using System.Globalization
@using System.IO
@using System.Linq
@using Microsoft.AspNetCore.Components.Forms
@using BARI_web.General_Services

@inject NpgsqlDataSource DataSource
@inject LaboratorioState LaboratorioState
@inject NavigationManager Nav
@inject IWebHostEnvironment HostEnvironment
@implements IDisposable

<PageTitle>Inventario de Equipos</PageTitle>

<section class="page-card">
    <h2>Inventario de Equipos</h2>
    <p>
        Gestión de inventario con dos niveles:
        <b>Modelo</b> (concepto abstracto: marca, categoría, manual, subcategorías, si es calibrable) y
        <b>Equipo físico</b> (instancia: estado, ubicación, serie, fechas, calibraciones).
    </p>
    <LaboratorioSelector />
</section>

<!-- =========================================================
     1) SUBIR MODELO (ABSTRACTO)
     ========================================================= -->
<section class="page-card" style="margin-top:1.5rem;">
    <details>
        <summary style="cursor:pointer; font-weight:600;">Subir modelo de equipo (abstracto)</summary>

        <div class="form-header">
            <h4>Modelo (modelos_equipo)</h4>
            <p class="form-hint">
                El modelo representa el equipo como producto (marca, categoría, manual, si es calibrable).
                Luego podrás registrar uno o más equipos físicos basados en este modelo.
            </p>
        </div>

        <div class="assign-row form-grid">
            <input class="border p-1" placeholder="ID modelo (opcional)" @bind="_nuevoModeloId" />
            <input class="border p-1" placeholder="Nombre del modelo (obligatorio)" @bind="_nuevoModeloNombre" />

            <div class="brand-picker">
                <select class="border p-1" @bind="_nuevoModeloMarcaId">
                    <option value="">Marca (opcional)</option>
                    @foreach (var m in _marcaOptions)
                    {
                        <option value="@m.Id">@m.Label</option>
                    }
                </select>

                @if (!string.IsNullOrWhiteSpace(SelectedModeloMarcaLogoUrl))
                {
                    <img class="thumb thumb-logo" src="@ResolveUrl(SelectedModeloMarcaLogoUrl)" alt="Logo marca" />
                }
            </div>

            <select class="border p-1" value="@_nuevoModeloCategoriaId" @onchange="OnNuevoModeloCategoriaChanged">
                <option value="">Categoría (obligatorio)</option>
                @foreach (var cat in _categoriaEquipoOptions)
                {
                    <option value="@cat.Id">@cat.Label</option>
                }
            </select>

            <label class="text-sm text-gray-600">
                <input type="checkbox" @bind="_nuevoModeloEsCalibrable" />
                Es calibrable (modelo)
            </label>

            <!-- ✅ NUEVO: altura del modelo -->
            <input class="border p-1" placeholder="Altura (cm) (opcional)" type="number" step="any" @bind="_nuevoModeloAlturaCm" />

            <div class="full-span">
                <select class="border p-1" @bind="_nuevoModeloManualDocTemplateId">
                    <option value="">Manual (opcional) · seleccionar documento (alcance EQUIPO)</option>
                    @foreach (var d in _manualDocTemplates)
                    {
                        <option value="@d.Id">@d.Label</option>
                    }
                </select>

                <div class="text-xs text-gray-500" style="margin-top:.25rem;">
                    ¿No está el manual?
                    <NavLink class="btn-link" href="/documentaciones">Ir a Documentaciones</NavLink>
                    <span class="text-xs text-gray-500">· crea uno con alcance <b>EQUIPO</b> y luego podrás usarlo como plantilla.</span>
                </div>
            </div>

            <input class="border p-1" placeholder="Descripción (opcional)" @bind="_nuevoModeloDescripcion" />
            <input class="border p-1" placeholder="Notas (opcional)" @bind="_nuevoModeloNotas" />

            <!-- Subcategorías (checkbox) -->
            <div class="upload-card full-span" style="min-width:0; width:100%; max-width:100%;">

                <details style="width:100%; max-width:100%; overflow:hidden;">
                    <summary style="cursor:pointer; font-weight:600; display:block; max-width:100%; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
                        @_nuevoModeloSubcatsDropdownLabel
                    </summary>

                    <div style="display:grid; gap:.35rem; padding-top:.5rem; max-height:240px; overflow:auto; max-width:100%;">
                        @if (string.IsNullOrWhiteSpace(_nuevoModeloCategoriaId))
                        {
                            <div class="text-xs text-gray-500">Selecciona una categoría primero.</div>
                        }
                        else if (NuevoModeloSubcategoriasFiltradas.Count == 0)
                        {
                            <div class="text-xs text-gray-500">No hay subcategorías disponibles.</div>
                        }
                        else
                        {
                            @foreach (var sc in NuevoModeloSubcategoriasFiltradas)
                            {
                                <label style="display:flex; gap:.5rem; align-items:flex-start; width:100%; max-width:100%;">
                                    <input type="checkbox"
                                           style="margin-top:.2rem;"
                                           checked="@_nuevoModeloSubcategoriaIds.Contains(sc.Id)"
                                           @onchange="(e) => ToggleNuevoModeloSubcategoria(sc.Id, e)" />

                                    <div style="min-width:0; width:100%; max-width:100%;">
                                        <span style="font-weight:700;">@sc.Label</span>
                                        <span class="text-xs text-gray-500" style="margin-left:.35rem;">(@sc.Id)</span>
                                    </div>
                                </label>
                            }
                        }
                    </div>
                </details>
            </div>

            <!-- Imagen modelo -->
            <div class="upload-card full-span">
                <div class="upload-options">
                    <label class="text-sm">
                        <input type="radio"
                               name="modeloImagenModo"
                               value="url"
                               checked="@(_nuevoModeloImagenModo == "url")"
                               @onchange="OnModeloImagenModoChanged" />
                        Colocar un URL
                    </label>
                    <label class="text-sm">
                        <input type="radio"
                               name="modeloImagenModo"
                               value="archivo"
                               checked="@(_nuevoModeloImagenModo == "archivo")"
                               @onchange="OnModeloImagenModoChanged" />
                        Subir archivo
                    </label>
                </div>

                @if (_nuevoModeloImagenModo == "url")
                {
                    <input class="border p-1" placeholder="Imagen URL (o ruta relativa)" @bind="_nuevoModeloImagenUrl" />
                }
                else
                {
                    <label class="upload-drop">
                        <InputFile OnChange="OnModeloImagenArchivoSeleccionado" accept="image/png,image/jpeg,image/jpg,image/webp" />
                        <span>Arrastra una imagen o haz clic para buscar</span>
                    </label>
                    @if (!string.IsNullOrWhiteSpace(_nuevoModeloImagenArchivo))
                    {
                        <div class="text-xs text-gray-500">Archivo: @_nuevoModeloImagenArchivo</div>
                    }
                }

                @if (!string.IsNullOrWhiteSpace(_nuevoModeloImagenUrl))
                {
                    <div class="preview-row">
                        <div class="text-xs text-gray-500">Preview:</div>
                        <img class="material-img-sm"
                             src="@ResolveUrl(_nuevoModeloImagenUrl)"
                             alt="Preview"
                             onerror="this.style.display='none';" />
                        <div class="text-xs text-gray-500">Guardará: <code>@_nuevoModeloImagenUrl</code></div>
                    </div>
                }
            </div>

            <div class="form-actions full-span">
                <button class="btn primary" @onclick="SubirModeloAsync">Subir modelo</button>
                @if (!string.IsNullOrWhiteSpace(_nuevoModeloMsg))
                {
                    <span class="text-sm text-gray-500">@_nuevoModeloMsg</span>
                }
            </div>
        </div>
    </details>
</section>

<!-- =========================================================
     2) SUBIR EQUIPO (FÍSICO)
     ========================================================= -->
<section class="page-card" style="margin-top:1rem;">
    <details>
        <summary style="cursor:pointer; font-weight:600;">Subir equipo físico (instancia)</summary>

        <div class="form-header">
            <h4>Equipo físico (equipos)</h4>
            <p class="form-hint">
                El equipo es la unidad real. Se recomienda elegir un modelo (para mantener subcategorías y marca coherentes).
                Área y mesón son obligatorios.
            </p>
        </div>

        <div class="assign-row form-grid">
            <input class="border p-1" placeholder="ID equipo (opcional)" @bind="_nuevoEquipoId" />
            <input class="border p-1" placeholder="Nombre del equipo (obligatorio)" @bind="_nuevoEquipoNombre" />

            <div class="brand-picker">
                <select class="border p-1" value="@_nuevoEquipoModeloId" @onchange="OnEquipoModeloChanged">
                    <option value="">Modelo </option>
                    @foreach (var opt in _modeloLookupOptions)
                    {
                        <option value="@opt.Id">@opt.Label</option>
                    }
                </select>

                @if (!string.IsNullOrWhiteSpace(SelectedEquipoModeloMarcaLogoUrl))
                {
                    <img class="thumb thumb-logo" src="@ResolveUrl(SelectedEquipoModeloMarcaLogoUrl)" alt="Logo marca" />
                }
            </div>

            <input class="border p-1" placeholder="Serie (opcional)" @bind="_nuevoEquipoSerie" />

            <select class="border p-1" @bind="_nuevoEquipoEstadoId">
                <option value="">Estado (opcional)</option>
                @foreach (var estado in _estadoOptions)
                {
                    <option value="@estado.Id">@estado.Label</option>
                }
            </select>

            <!-- Área: dropdown + mapa -->
            <div class="selector-split full-span">
                <select class="border p-1"
                        value="@_nuevoEquipoAreaId"
                        @onchange="OnAreaChanged">
                    <option value="">Área (obligatorio)</option>
                    @foreach (var area in _areaOptions)
                    {
                        <option value="@area.Id">@area.Label</option>
                    }
                </select>

                <div class="visual-picker">
                    <div class="visual-toolbar">
                        <label class="text-xs text-gray-500">Mapa de áreas</label>

                        <select class="border p-1 text-xs" @bind="_currentPlantaId">
                            <option value="">Todas</option>
                            @foreach (var planta in _plantasLookup)
                            {
                                <option value="@planta.Key">@planta.Value</option>
                            }
                        </select>
                    </div>

                    @if (_canvasViews.Count == 0)
                    {
                        <div class="text-xs text-gray-500">Sin mapas disponibles.</div>
                    }
                    else
                    {
                        @foreach (var view in _canvasViews)
                        {
                            var areasPorPlanta = view.Areas.Where(a => IsAreaInCurrentPlanta(a.PlantaId)).ToList();
                            if (areasPorPlanta.Count == 0)
                                continue;

                            <div class="canvas-card">
                                <div class="text-xs text-gray-500">@view.Canvas.Nombre</div>

                                <svg width="100%" height="100%"
                                     viewBox="0 0 @view.Canvas.Ancho @view.Canvas.largo"
                                     preserveAspectRatio="xMidYMid meet">

                                    <rect x="0" y="0"
                                          width="@FormatSvg(view.Canvas.Ancho)"
                                          height="@FormatSvg(view.Canvas.largo)"
                                          fill="transparent"
                                          style="pointer-events:all"
                                          @onclick="ClearAreaSelection" />

                                    @foreach (var area in areasPorPlanta)
                                    {
                                        <g class="area"
                                           style="cursor:pointer"
                                           @onclick="@(() => SelectAreaFromVisualAsync(area.AreaId))">
                                            @if (!string.IsNullOrWhiteSpace(area.Nombre))
                                            {
                                                <title>@area.Nombre</title>
                                            }
                                            @foreach (var poly in area.Poligonos.OrderBy(p => p.ZOrder))
                                            {
                                                <polygon points="@PointsString(poly)"
                                                         class="area-shape"
                                                         fill="@AreaFill(area)"
                                                         vector-effect="non-scaling-stroke" />
                                            }

                                            @if (!string.IsNullOrWhiteSpace(area.Nombre))
                                            {
                                                var labelWidth = AreaLabelWidth(area);
                                                var labelHeight = AreaLabelHeight(area);
                                                var fontSize = AreaLabelFontSize(area);

                                                <svg:rect class="area-pill"
                                                          x="@FormatSvg(area.CenterX - labelWidth / 2m)"
                                                          y="@FormatSvg(area.CenterY - labelHeight / 2m)"
                                                          width="@FormatSvg(labelWidth)"
                                                          height="@FormatSvg(labelHeight)"
                                                          rx="0.15" ry="0.15" />

                                                <svg:text class="area-label"
                                                          x="@FormatSvg(area.CenterX)" y="@FormatSvg(area.CenterY)"
                                                          text-anchor="middle" dominant-baseline="middle"
                                                          font-size="@FormatSvg(fontSize)">
                                                    @area.Nombre
                                                </svg:text>
                                            }
                                        </g>
                                    }
                                </svg>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Mesón: dropdown + mapa -->
            <div class="selector-split full-span">
                <select class="border p-1"
                        value="@_nuevoEquipoMesonId"
                        @onchange="OnMesonChanged"
                        disabled="@string.IsNullOrWhiteSpace(_nuevoEquipoAreaId)">
                    <option value="">Mesón (obligatorio)</option>
                    @foreach (var meson in _mesonOptions)
                    {
                        <option value="@meson.Id">@meson.Label</option>
                    }
                </select>

                <div class="visual-picker">
                    <div class="text-xs text-gray-500">Mesones del área seleccionada</div>

                    @if (SelectedAreaForMap is not null)
                    {
                        var selectedArea = SelectedAreaForMap;
                        var vb = AreaViewBoxRect(selectedArea);

                        <div class="canvas-card">
                            <div class="text-xs text-gray-500">@SelectedAreaLabel</div>
                            <svg width="100%" height="100%"
                                 viewBox="@AreaViewBox(selectedArea)"
                                 preserveAspectRatio="xMidYMid meet">

                                <rect x="@FormatSvg(vb.x)" y="@FormatSvg(vb.y)"
                                      width="@FormatSvg(vb.w)" height="@FormatSvg(vb.h)"
                                      fill="transparent"
                                      style="pointer-events:all"
                                      @onclick="ClearMesonSelection" />

                                @foreach (var poly in selectedArea.Poligonos.OrderBy(p => p.ZOrder))
                                {
                                    <polygon points="@PointsString(poly)"
                                             class="area-shape"
                                             fill="@AreaFill(selectedArea)"
                                             vector-effect="non-scaling-stroke" />
                                }

                                @foreach (var meson in _mesonVisuals.OrderBy(m => m.ZOrder))
                                {
                                    <g class="meson-visual"
                                       style="cursor:pointer"
                                       @onclick:stopPropagation="true"
                                       @onclick="@(() => SelectMeson(meson.MesonId))">

                                        <rect class="meson-rect"
                                              x="@FormatSvg(meson.X)"
                                              y="@FormatSvg(meson.Y)"
                                              width="@FormatSvg(meson.Width)"
                                              height="@FormatSvg(meson.Height)"
                                              fill="@MesonFill(meson)"
                                              opacity="@FormatSvg(MesonOpacity(meson))"
                                              stroke="@MesonStroke(meson)"
                                              stroke-width="@FormatSvg(MesonStrokeWidth(meson))" />

                                        <svg:text class="meson-label"
                                                  x="@FormatSvg(meson.X + meson.Width / 2m)"
                                                  y="@FormatSvg(meson.Y + meson.Height / 2m)"
                                                  text-anchor="middle"
                                                  dominant-baseline="middle"
                                                  font-size="@FormatSvg(MesonLabelFontSize(meson))"
                                                  textLength="@FormatSvg(meson.Width * 0.85m)"
                                                  lengthAdjust="spacingAndGlyphs">
                                            @meson.Label
                                        </svg:text>
                                    </g>
                                }
                            </svg>
                        </div>
                    }

                    @if (_mesonSummaries.Count == 0)
                    {
                        <div class="text-xs text-gray-500">Sin mesones disponibles.</div>
                    }
                    else
                    {
                        <ul class="meson-list">
                            @foreach (var meson in _mesonSummaries)
                            {
                                var isSel = string.Equals(meson.MesonId, _nuevoEquipoMesonId, StringComparison.OrdinalIgnoreCase);

                                <li class="@(isSel ? "meson-item selected" : "meson-item")">
                                    <button type="button" class="btn link"
                                            @onclick="@(() => SelectMeson(meson.MesonId))">
                                        @meson.Nombre
                                    </button>
                                    <div class="text-xs text-gray-500">
                                        Reactivos: @meson.ReactivosCount · Equipos: @meson.EquiposCount
                                    </div>
                                </li>
                            }
                        </ul>
                    }

                    @if (!string.IsNullOrWhiteSpace(_nuevoEquipoMesonId))
                    {
                        <div class="text-xs text-gray-500">
                            Seleccionado: @SelectedAreaLabel · @SelectedMesonLabel
                        </div>
                    }
                </div>
            </div>

            <input class="border p-1" placeholder="Nivel (número)" @bind="_nuevoEquipoNivel" />
            <input class="border p-1" placeholder="Posición (opcional)" @bind="_nuevoEquipoPosicion" />

            <div class="field-stack">
                <label class="field-label">Fecha de compra</label>
                <input class="border p-1" type="date" @bind-value="_nuevoEquipoFechaCompra" @bind-value:format="yyyy-MM-dd" />
            </div>

            <div class="field-stack">
                <label class="field-label">Garantía hasta</label>
                <input class="border p-1" type="date" @bind-value="_nuevoEquipoGarantiaHasta" @bind-value:format="yyyy-MM-dd" />
            </div>

            <input class="border p-1" placeholder="Observaciones" @bind="_nuevoEquipoObservaciones" />

            <!-- Imagen equipo -->
            <div class="upload-card full-span">
                <div class="upload-options">
                    <label class="text-sm">
                        <input type="radio"
                               name="equipoImagenModo"
                               value="url"
                               checked="@(_nuevoEquipoImagenModo == "url")"
                               @onchange="OnEquipoImagenModoChanged" />
                        URL
                    </label>
                    <label class="text-sm">
                        <input type="radio"
                               name="equipoImagenModo"
                               value="archivo"
                               checked="@(_nuevoEquipoImagenModo == "archivo")"
                               @onchange="OnEquipoImagenModoChanged" />
                        Archivo
                    </label>
                </div>

                @if (_nuevoEquipoImagenModo == "url")
                {
                    <input class="border p-1" placeholder="Imagen URL (o ruta relativa)" @bind="_nuevoEquipoImagenUrl" />
                }
                else
                {
                    <label class="upload-drop">
                        <InputFile OnChange="OnEquipoImagenArchivoSeleccionado" accept="image/png,image/jpeg,image/jpg,image/webp" />
                        <span>Arrastra una imagen o haz clic para buscar</span>
                    </label>
                    @if (!string.IsNullOrWhiteSpace(_nuevoEquipoImagenArchivo))
                    {
                        <div class="text-xs text-gray-500">Archivo: @_nuevoEquipoImagenArchivo</div>
                    }
                }

                @if (!string.IsNullOrWhiteSpace(_nuevoEquipoImagenUrl))
                {
                    <div class="preview-row">
                        <div class="text-xs text-gray-500">Preview:</div>
                        <img class="material-img-sm"
                             src="@ResolveUrl(_nuevoEquipoImagenUrl)"
                             alt="Preview"
                             onerror="this.style.display='none';" />
                        <div class="text-xs text-gray-500">Guardará: <code>@_nuevoEquipoImagenUrl</code></div>
                    </div>
                }
            </div>

            <label class="text-sm text-gray-600">
                <input type="checkbox" @bind="_nuevoEquipoRequiereCalibracion" />
                Requiere calibración (instancia)
            </label>

            <div class="form-actions full-span">
                <button class="btn primary" @onclick="SubirEquipoAsync">Subir equipo</button>
                @if (!string.IsNullOrWhiteSpace(_nuevoEquipoMsg))
                {
                    <span class="text-sm text-gray-500">@_nuevoEquipoMsg</span>
                }
            </div>
        </div>
    </details>
</section>

<!-- =========================================================
     3) GUÍA CATEGORÍAS + FILTRO + VER TODOS
     ========================================================= -->
<section class="page-card" style="margin-top:1.5rem;">
    <div class="category-header">
        <div>
            <h3>Guía base (equipos)</h3>
            <p class="helper">Selecciona una subcategoría para ver modelos/equipos, o activa “Ver todos”.</p>
        </div>

        <div class="category-controls">
            <label class="toggle">
                <input type="checkbox"
                       checked="@_verTodos"
                       @onchange="OnVerTodosToggleAsync" />
                <span>Ver todo</span>
            </label>

            <select class="category-select"
                    @onchange="OnSubcategoriaChanged"
                    value="@(_verTodos ? "" : SubcategoriaId)">
                <option value="">Todas las subcategorías</option>
                @foreach (var categoria in categorias)
                {
                    <optgroup label="@categoria.Nombre">
                        @foreach (var subcategoria in categoria.Subcategorias)
                        {
                            <option value="@subcategoria.Id">@subcategoria.Nombre</option>
                        }
                    </optgroup>
                }
            </select>
        </div>

        @if (!string.IsNullOrWhiteSpace(SubcategoriaId))
        {
            <NavLink class="btn-link" href="/inventario-equipo">Ver todas</NavLink>
        }
    </div>

    @if (categorias.Count == 0)
    {
        <p><em>Cargando categorías…</em></p>
    }
    else
    {
        <div class="category-grid">
            @foreach (var categoria in categorias)
            {
                <div class="category-card">
                    <div class="category-title">@categoria.Nombre</div>
                    <ul class="category-list">
                        @foreach (var subcategoria in categoria.Subcategorias)
                        {
                            <li>
                                <NavLink href="@($"/inventario-equipo/categoria/{subcategoria.Id}")" class="category-link">
                                    @subcategoria.Nombre
                                </NavLink>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    }
</section>

<!-- =========================================================
     4) LISTA: MODELOS (abstractos)
     ========================================================= -->
<section class="page-card" style="margin-top:1.5rem;">
    <div class="materials-header">
        <div class="materials-title">
            <h3>
                @(_verTodos
                    ? "Modelos · (todos)"
                    : (string.IsNullOrWhiteSpace(SubcategoriaId)
                    ? "Modelos"
                    : $"Modelos · {subcategoriaNombre ?? SubcategoriaId}"))
            </h3>

            @if (_verTodos || !string.IsNullOrWhiteSpace(SubcategoriaId))
            {
                <span class="badge">@ModelosCountLabel</span>
            }
        </div>

        <input class="border p-1 search-input-invent"
               placeholder="Buscar (modelo, marca, categoría, subcategoría, altura, manual)..."
               @bind="_searchModelosText"
               @bind:event="oninput"
               disabled="@(!(_verTodos || !string.IsNullOrWhiteSpace(SubcategoriaId)))" />
    </div>

    @if (!string.IsNullOrWhiteSpace(modelosLoadError))
    {
        <p class="error-note">No se pudieron cargar modelos: @modelosLoadError</p>
    }
    else if (string.IsNullOrWhiteSpace(SubcategoriaId) && !_verTodos)
    {
        <div class="empty">
            <div class="helper">Elige una subcategoría o activa “Ver todo” para listar modelos.</div>
        </div>
    }
    else if (modelos.Count == 0)
    {
        <div class="empty">No hay modelos registrados para este filtro.</div>
    }
    else
    {
        <div class="table-wrap">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Modelo</th>
                        <th>Marca</th>
                        <th>Categoría</th>
                        <th>Subcategorías</th>
                        <th>Altura (cm)</th>
                        <th>Calibrable</th>
                        <th>Equipos (en lab)</th>
                        <th>Ubicación (último equipo)</th>
                        <th>Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in ModelosFiltrados)
                    {
                        <tr>
                            <td>
                                <NavLink href="@($"/inventario-equipos/modelo/{m.Id}")">
                                    @m.Id
                                </NavLink>
                            </td>
                            <td>
                                <NavLink href="@($"/inventario-equipos/modelo/{m.Id}")">
                                    @m.Nombre
                                </NavLink>
                            </td>

                            <td>
                                <div class="cell-media">
