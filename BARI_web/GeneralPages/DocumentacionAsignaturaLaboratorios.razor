@page "/documentacion/{Asignatura}/laboratorios"

<PageTitle>Documentación de laboratorio</PageTitle>

<section class="page-card">
    <h2>Documentación de laboratorio</h2>
    <p>
        Asignatura: <strong>@Asignatura</strong>. Aquí se mostrará la documentación
        académica asociada al laboratorio como asignatura.
    </p>
    <LaboratorioSelector />
</section>

<section class="page-card" style="margin-top:1.5rem;">
    <h3>Experiencias y clases</h3>
    <p class="empty-note">
        Aún no hay experiencias registradas para esta asignatura.
    </p>
</section>

@code {
    [Parameter] public string Asignatura { get; set; } = "";
}

<style>
    .empty-note { color:#6b7280; }
</style>
